<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
    http://www.springframework.org/schema/beans/spring-beans.xsd  
    http://code.alibabatech.com/schema/dubbo  
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="springboot-dubbo" owner="benjamin"/>

	<!-- 注册中心暴露服务地址 -->
	<dubbo:registry protocol="zookeeper" address="192.168.1.27:2181,192.168.1.27:2182,192.168.1.27:2183" timeout="20000"/>

	<!-- 暴露服务 -->
	<dubbo:protocol name="dubbo" port="-1" />
	
	<dubbo:service ref="springbootDubboService" interface="com.xx.springboot.dubbo.ISpringbootDubboService" timeout="60000" retries="0"/>

</beans>